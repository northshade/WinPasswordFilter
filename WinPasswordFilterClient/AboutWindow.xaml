<Window x:Class="WinPasswordFilterClient.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinPasswordFilterClient"
        mc:Ignorable="d" WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Title="About" Height="330" Width="400" Background="#FFF0F0F0">
    <Grid>
        <StackPanel Margin="0,0,5,0">
            <Label Padding="5,5,5,0" Margin="0,10,0,0">WinPasswordFilter</Label>
            <Label Padding="5,5,5,0">Version: 1.0.0</Label>
            <Label Padding="5,5,5,0">Author: David Vuletić</Label>
            <Label>Faculty of Technical Sciences</Label>
            <Label>Details:</Label>
            <TextBox x:Name="DescriptionBox" IsReadOnly="True" Margin="5,0" Height="153" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" Text=""/>

        </StackPanel>
        
    </Grid>
</Window>
